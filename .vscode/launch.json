{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "envFile": "${workspaceFolder}/env/.env.dev",
            "program": "${workspaceFolder}/api/manage.py",
            "args": [
                "runsslserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true,
        },
        {
            "name": "Run Unit Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/api/tests/test_users.py"
            ],
            "envFile": "${workspaceFolder}/env/.env.dev",
            "env": {
                "SQL_DATABASE": ":memory:",
            }
        },
        {
            "name": "Run Users Script",
            "type": "python",
            "request": "launch",
            "envFile": "${workspaceFolder}/env/.env.dev",
            "program": "${workspaceFolder}/api/manage.py",
            "args": [
                "runscript", "scraper"
            ],
            "django": true,
        },
    ]
}

